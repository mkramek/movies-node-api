<%- include('../partials/header') %>
<div style="display: flex; flex-flow: row wrap; justify-content: space-evenly; align-items: center">
	<% movies.forEach(movie => { %>
		<div class="card blue-grey darken-1">
			<div class="card-content white-text">
				<span class="card-title"><%= movie.Title %></span>
				<p>
					<span>Year: <%= movie.Year %></span><br/>
					<span>Type: <%= movie.Type %></span><br/>
					<span>IMDB ID: <%= movie.imdbID %></span>
				</p>
			</div>
		<% if (!single) { %>
			<div class="card-action">
				<a href="/api/movies/<%= movie.imdbID %>">View this film</a>
			</div>
		<% } %>
		</div>
	<% }); %>
</div>
<%- include('../partials/footer') %>
